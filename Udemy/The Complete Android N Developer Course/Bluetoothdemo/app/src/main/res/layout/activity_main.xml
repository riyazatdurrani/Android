<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vinicius.bluetoothdemo.MainActivity">

    <Button
        android:id="@+id/buttonOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="turnBluetoothOff"
        android:text="Turn Bluetooth Off"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="27dp" />

    <Button
        android:id="@+id/findDevicesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="findDiscoverableDevices"
        android:text="find Devices"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="108dp" />

    <Button
        android:id="@+id/viewPairedDevicesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewPairedDevices"
        android:text="View Paried Devices"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="182dp" />

    <ListView
        android:id="@+id/pairedDevicesListView"
        android:layout_width="368dp"
        android:layout_height="249dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="257dp" />
</android.support.constraint.ConstraintLayout>
